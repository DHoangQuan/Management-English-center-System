@model IEnumerable<EnglishCenter.Models.UsingRoom>

@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script>document.getElementsByTagName("html")[0].className += " js";</script>
    <link rel="stylesheet" href="~/MaterialSchedule/assets/css/style.css">
    <title>Schedule Template | CodyHouse</title>
    <link rel="stylesheet" href="~/MaterialPickDate/css/pikaday.css">
    <link rel="stylesheet" href="~/MaterialPickDate/css/site.css">
</head>
<body>
    
    <header class="cd-main-header text-center flex flex-column flex-center">
        @*<form action="@Url.Action("Calculate", "UsingRooms")" method="post">*@
        <form action="@Url.Action("Calculate", "UsingRooms")" method="post">

            <input type="datetime" id="date" name="date" />
            <button type="submit">Submit</button>
        </form>
        @Html.ActionLink("Back to List", "Index","Rooms")
    </header>

    <div class="cd-schedule cd-schedule--loading margin-top-lg margin-bottom-lg js-cd-schedule">
        <div class="cd-schedule__timeline">
            <ul>
                <li><span>09:00</span></li>
                <li><span>09:30</span></li>
                <li><span>10:00</span></li>
                <li><span>10:30</span></li>
                <li><span>11:00</span></li>
                <li><span>11:30</span></li>
                <li><span>12:00</span></li>
                <li><span>12:30</span></li>
                <li><span>13:00</span></li>
                <li><span>13:30</span></li>
                <li><span>14:00</span></li>
                <li><span>14:30</span></li>
                <li><span>15:00</span></li>
                <li><span>15:30</span></li>
                <li><span>16:00</span></li>
                <li><span>16:30</span></li>
                <li><span>17:00</span></li>
                <li><span>17:30</span></li>
                <li><span>18:00</span></li>
                <li><span>18:30</span></li>
                <li><span>19:00</span></li>
                <li><span>19:30</span></li>
                <li><span>20:00</span></li>
                <li><span>20:30</span></li>
                <li><span>21:00</span></li>
            </ul>
        </div> <!-- .cd-schedule__timeline -->
        
        <div class="cd-schedule__events">
            <ul>
                
                <li class="cd-schedule__group">
                    <div class="cd-schedule__top-info"><span>Monday</span><br /></div>

                    <ul>
                        @foreach (var item in Model)
                        {

                            if (item.DayOfWeek == "Monday")
                            {
                                <li class="cd-schedule__event">

                                    <a class="schedule" data-lessonid="@item.Class.LessonID" data-start="@item.Slot.TimeStart" data-end="@item.Slot.TimeEnd" data-event="event-1" href="#0">
                                        <em class="cd-schedule__name">@item.Class.ClassName.</em>
                                    </a>

                                </li>
                            }
                        }
                    </ul>
                </li>


                <li class="cd-schedule__group">
                    <div class="cd-schedule__top-info"><span>Tuesday<br /></span></div>

                    <ul>
                        @foreach (var item in Model)
                        {
                            if (item.DayOfWeek == "Tuesday")
                            {
                                <li class="cd-schedule__event">
                                    <a class="schedule" data-lessonid="@item.Class.LessonID" data-start="@item.Slot.TimeStart" data-end="@item.Slot.TimeEnd" data-content="event-abs-circuit" data-event="event-2" href="#0">
                                        <em class="cd-schedule__name">@item.Class.ClassName</em>
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                </li>


                <li class="cd-schedule__group">
                    <div class="cd-schedule__top-info"><span>Wednesday<br /></span></div>

                    <ul>
                        @foreach (var item in Model)
                        {
                            if (item.DayOfWeek == "Wednesday")
                            {
                                <li class="cd-schedule__event">
                                    <a class="schedule" data-lessonid="@item.Class.LessonID" data-start="@item.Slot.TimeStart" data-end="@item.Slot.TimeEnd" data-event="event-3" href="#0">

                                        <em class="cd-schedule__name">@item.Class.ClassName</em>
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                </li>

                <li class="cd-schedule__group">
                    <div class="cd-schedule__top-info"><span>Thursday<br /></span></div>

                    <ul>
                        @foreach (var item in Model)
                        {
                            if (item.DayOfWeek == "Thursday")
                            {
                                <li class="cd-schedule__event">
                                    <a class="schedule" data-lessonid="@item.Class.LessonID" data-start="@item.Slot.TimeStart" data-end="@item.Slot.TimeEnd" data-content="event-abs-circuit" data-event="event-4" href="#0">
                                        <em class="cd-schedule__name">@item.Class.ClassName</em>
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                </li>


                <li class="cd-schedule__group">
                    <div class="cd-schedule__top-info"><span>Friday<br /></span></div>

                    <ul>
                        @foreach (var item in Model)
                        {
                            if (item.DayOfWeek == "Friday")
                            {
                                <li class="cd-schedule__event">
                                    <a class="schedule" data-lessonid="@item.Class.LessonID" data-start="@item.Slot.TimeStart" data-end="@item.Slot.TimeEnd" data-content="event-abs-circuit" data-event="event-1" href="#0">
                                        <em class="cd-schedule__name">@item.Class.ClassName</em>
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                </li>

                <li class="cd-schedule__group">
                    <div class="cd-schedule__top-info"><span>Saturday<br /></span></div>

                    <ul>
                        @foreach (var item in Model)
                        {
                            if (item.DayOfWeek == "Saturday")
                            {
                                <li class="cd-schedule__event">
                                    <a class="schedule" data-lessonid="@item.Class.LessonID" data-start="@item.Slot.TimeStart" data-end="@item.Slot.TimeEnd" data-content="event-abs-circuit" data-event="event-1" href="#0">
                                        <em class="cd-schedule__name">@item.Class.ClassName</em>
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                </li>

                <li class="cd-schedule__group">
                    <div class="cd-schedule__top-info"><span>Sunday<br /></span></div>

                    <ul>
                        @foreach (var item in Model)
                        {
                            if (item.DayOfWeek == "Sunday")
                            {
                                <li class="cd-schedule__event">
                                    <a class="schedule" data-lessonid="@item.Class.LessonID" data-start="@item.Slot.TimeStart" data-end="@item.Slot.TimeEnd" data-content="event-abs-circuit" data-event="event-1" href="#0">
                                        <em class="cd-schedule__name">@item.Class.ClassName</em>
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                </li>


            </ul>
        </div>

        <div class="cd-schedule-modal">
            <header class="cd-schedule-modal__header">
                <div class="cd-schedule-modal__content">
                    <span class="cd-schedule-modal__date"></span>
                    <h3 class="cd-schedule-modal__name"></h3>
                </div>

                <div class="cd-schedule-modal__header-bg"></div>
            </header>

            <div class="cd-schedule-modal__body">
                <div class="cd-schedule-modal__event-info"></div>
                <div class="cd-schedule-modal__body-bg"></div>
            </div>

            <a href="#0" class="cd-schedule-modal__close text-replace">Close</a>
        </div>

        <div class="cd-schedule__cover-layer"></div>
    </div> <!-- .cd-schedule -->

    <script src="~/MaterialSchedule/assets/js/util.js"></script> <!-- util functions included in the CodyHouse framework -->
    <script src="~/MaterialSchedule/assets/js/main.js"></script>

    <script src="~/MaterialPickDate/pikaday.js"></script>
    <script>

        var picker = new Pikaday(
        {
            field: document.getElementById('date'),
            //firstDay: 1,
            //minDate: new Date(),
            //maxDate: new Date(2020, 12, 31),
            //yearRange: [2000,2020]
        });

    </script>

</body>
</html>